<section class="global-page-header blog-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h2>Contact</h2>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="contact-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="block">
          <h2 class="subtitle wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".3s">Get In Touch with Us</h2>
            <p class="subtitle-des wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".5s">
                    <%= raw(@page.content_for(:body)) %>
                </p>
                <div class="row address-details">
                    <div class="col-md-4">
                        <div class="address wow fadeInLeft" data-wow-duration="500ms" data-wow-delay=".5s">
                            <i class="ion-ios-location-outline"></i>
                            <p>123 Main St. Skokie, IL 60076</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="email wow fadeInLeft" data-wow-duration="500ms" data-wow-delay=".7s">
                            <i class="ion-ios-email-outline"></i>
                            <p><a href="mailto:paul.pinkus@sharingwisdominc.com">Email Us</a></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="phone wow fadeInLeft" data-wow-duration="500ms" data-wow-delay=".9s">
                            <i class="ion-ios-telephone-outline"></i>
                            <p><a href="tel:312-310-1029">(312) 310-1029</a></p>
                      </div>
                  </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
             <div class="map-area">
                <h2 class="subtitle  wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".3s">Find Us</h2>
                <p class="subtitle-des wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".5s">
                  <%= raw(@page.content_for(:side_body)) %>
                </p>
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed/v1/place?q=Merchandise+Mart+Properties,+Inc.,+West+Merchandise+Mart+Plaza,+Chicago,+IL,+United+States&key=AIzaSyAN0om9mFmy1QN6Wf54tXAowK4eT0ZUPrU" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
  </div>
</section>
