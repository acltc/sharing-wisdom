<section class="global-page-header blog-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h2>Our Most Recent Blog Posts</h2>
          <h4>Please enjoy our thoughts on business, education, and organizational success</h4>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="blog-full-width">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <article class="wow fadeInDown" data-wow-delay=".3s" data-wow-duration="500ms">
          <% content_for :body do %>
            <%= raw @page.content_for(Refinery::Pages.default_parts.first[:slug].to_sym) if Refinery::Pages.default_parts.any? %>

            <% if @posts.any? %>
              <section id="blog_posts">
                <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
                <%= will_paginate @posts %>
              </section>
            <% else %>
              <p><%= t('.no_blog_articles_yet') %></p>
            <% end %>
          <% end %>

          <% content_for :side_body_prepend do -%>
            <%= raw @page.content_for(Refinery::Pages.default_parts.second[:slug].to_sym) %>
          <% end if Refinery::Pages.default_parts.many? -%>
          <%= render '/refinery/blog/shared/body_content_right' %>

          <%= render "/refinery/content_page" %>
          <% content_for :stylesheets, stylesheet_link_tag('refinery/blog/frontend') %>
        </article>
      </div>
    </div>
  </div>
</section>